<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="me.lokka.jz.dao.extend.OrderExtendMapper">
    <select id="selectById" resultMap="orderExtendResultMap">
        SELECT
            o.id as o_id,
            o.order_time,
            o.total,
            o.customer_id,
            o.employee_id,
            o.address_id,
            c.id as  c_id,
            c.realname as c_realname,
            c.telephone as c_telephone,
            e.id as e_id,
            e.realname as e_realname,
            e.telephone as e_telephone,
            a.id as a_id,
            a.province,
            a.city,
            a.area,
            a.address,
            a.telephone
        FROM
            jz_order o
        LEFT JOIN base_user c
        ON o.customer_id = c.id
        LEFT JOIN base_user e
        ON o.employee_id = e.id
        LEFT JOIN jz_address a
        ON o.address_id = a.id
        WHERE
            o.id = #{id}
    </select>
    <resultMap id="orderExtendResultMap" type="me.lokka.jz.bean.extend.OrderExtend">
        <id column="o_id" jdbcType="BIGINT" property="id" />
        <result column="order_time" jdbcType="BIGINT" property="orderTime"/>
        <result column="total" jdbcType="DOUBLE" property="total"/>
        <result column="status" property="status"/>
        <result column="customer_id" jdbcType="BIGINT" property="customerId"/>
        <result column="employee_id" jdbcType="BIGINT" property="employeeId"/>
        <result column="address_id" jdbcType="BIGINT" property="addressId"/>
        <association property="customer"
                     column="customer_id"
                     select="me.lokka.jz.dao.UserMapper.selectByPrimaryKey"
        />
        <association property="employee"
                     column="employee_id"
                     select="me.lokka.jz.dao.UserMapper.selectByPrimaryKey"
        />
        <association property="address" javaType="me.lokka.jz.bean.Address">
            <id column="a_id" jdbcType="BIGINT" property="id"/>
            <result column="province" jdbcType="VARCHAR" property="province"/>
            <result column="city" jdbcType="VARCHAR" property="city"/>
            <result column="area" jdbcType="VARCHAR" property="area"/>
            <result column="address" jdbcType="VARCHAR" property="address"/>
            <result column="telephone" jdbcType="VARCHAR" property="telephone"/>
        </association>
        <collection property="orderLines" column="o_id" select="me.lokka.jz.dao.extend.OrderLineExtendMapper.selectByOrderId">
        </collection>
    </resultMap>
</mapper>